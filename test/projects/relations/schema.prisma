datasource db {
  provider = "sqlite"
  url      = env("__REPLACE__")
}

generator db {
  provider          = "go run github.com/prisma/prisma-client-go"
  output            = "."
  disableGoBinaries = true
  package           = "relations"
}

model User {
  id       String  @id @default(cuid())
  email    String  @unique
  username String
  name     String?

  // TODO separate this into an extra test
  // related issue: https://github.com/prisma/prisma-client-go/issues/126
  role   Role?   @relation(fields: [roleID], references: [id])
  roleID String?

  posts    Post[]
  comments Comment[]
}

model Post {
  id      String  @id @default(cuid())
  title   String
  content String?

  author   User   @relation(fields: [authorID], references: [id])
  authorID String

  // 1) optional relation
  // 2) uppercase model
  // TODO create separate tests for these two cases
  // related issue: https://github.com/prisma/prisma-client-go/issues/127
  Category   Category? @relation(fields: [categoryID], references: [id])
  categoryID String?

  comments Comment[]
}

model Comment {
  id      String @id @default(cuid())
  content String

  by     User   @relation(fields: [userID], references: [id])
  userID String

  post   Post   @relation(fields: [postID], references: [id])
  postID String
}

model Category {
  id     String @id @default(cuid())
  name   String
  weight Int?
  posts  Post[]
}

model Role {
  id    String @id @default(cuid())
  name  String
  posts User[]
}
